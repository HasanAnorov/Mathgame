<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00574B"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/beginbtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Begin"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="18dp"
        android:background="@drawable/gamebtn1"
        android:textColor="#1DACD6"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/aboutbtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="About"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/beginbtn"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="18dp"
        android:background="@drawable/gamebtn2"
        android:textColor="#F400A1"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/exitbtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/aboutbtn"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="18dp"
        android:textColor="#FFDB00"
        android:background="@drawable/gamebtn3"
        android:textAllCaps="false">
    </Button>

    <ImageView
        android:id="@+id/doska"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:background="@drawable/education_school_abacus_math_mathematics_compute_calculate_icon_133447"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/beginbtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>